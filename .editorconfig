# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# use 4-space indent for python so it conforms to the pep-8
[*.py]
indent_style = space
indent_size = 4
max_line_length = 80

[*.js]
indent_type = space
indent_size = 4

[*.jsx]
indent_type = space
indent_size = 4

[*.scss]
indent_type = space
indent_size = 4

# package.json
[{package.json}]
indent_style = space
indent_size = 4

[*.html]
indent_type = space
indent_size = 4

[*.svg]
indent_type = space
indent_size = 4

[.*rc]
indent_type = space
indent_size = 4
